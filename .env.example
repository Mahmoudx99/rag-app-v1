# Database (SQLite for local/testing)
DATABASE_URL=sqlite:///./data/rag_app.db
# For GCP: DATABASE_URL=postgresql://user:pass@/dbname?host=/cloudsql/project:region:instance

# ChromaDB
CHROMA_PERSIST_DIR=/data/chromadb
CHROMA_COLLECTION=documents

# File Storage (Universal location for all documents)
WATCH_DIR=/data/watch
MAX_UPLOAD_SIZE=52428800  # 50MB in bytes

# PDF Processing
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
CHUNK_STRATEGY=paragraph

# Embeddings
EMBEDDING_MODEL=all-MiniLM-L6-v2
EMBEDDING_DIMENSION=384
BATCH_SIZE=32

# API
BACKEND_CORS_ORIGINS=["http://localhost:3000", "http://localhost"]

# Frontend
REACT_APP_API_URL=http://localhost:8000/api/v1
